<body class="devise-view">
  <%= render "devise/shared/welcome_bar" %>
  <div class="devise">
    <h2 class="fyp_label">Change your password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="dv-form-content">
        <div class="dv_field">
          <%= f.label :password, "New password", class:"dv_lbl" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", type:"password", placeholder:"Password" %>
        </div>

        <div class="dv_field">
          <%= f.label :password_confirmation, "Confirm new password", class:"dv_lbl" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", type:"password"%>
        </div>

        <div class="dv_actions">
          <%= f.submit "Change my password", class:"btn btn-primary" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</body>
