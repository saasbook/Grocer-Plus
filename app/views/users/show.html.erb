<body class="show-view">
  <%= render 'navbar' %>
  <h2 class="text-center show-label">Today's Meal Plan</h2>
  <h4 class="text-center calorie-label">Recommended Daily Caloric Intake: <%=@calories %></h2>
  <div class="flex-row">
    <div class="card-deck mp-cards">
      <div class="card">
        <img height="200" width="300" class="card-img-top" src="<%= @breakImg %>"/>
        <div class="card-body">
          <h5 class="card-title"><%= @breakTitle%></h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Calories: <%=@breakCals%> </li>
          <li class="list-group-item">Preparation Time: <%=@breakTime%> mins</li>
        </ul>
        <div class="card-body">
          <%= link_to "View Recipe", @breakLink, class: "btn btn-primary" %>
          <%= link_to "Favorite Breakfast", favorite_recipe_path(:Type => "Breakfast", :Title => @breakTitle, :Calories => @breakCals, :PrepTime => @breakTime, :Instr_link => @break_instructions_link), class: "btn btn-primary fav"%>
        </div>
      </div>
      <div class="card two">
        <img height="200" width="300" class="card-img-top" src="<%= @lunchImg %>"/>
        <div class="card-body">
          <h5 class="card-title"><%= @lunchTitle%></h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Calories: <%=@lunchCals%> </li>
          <li class="list-group-item">Preparation Time: <%=@lunchTime%> mins</li>
        </ul>
        <div class="card-body">
          <%= link_to "View Recipe", @lunchLink, class: "btn btn-primary" %>
          <%= link_to "Favorite Lunch", favorite_recipe_path(:Type => "Lunch", :Title => @lunchTitle, :Calories => @lunchCals, :PrepTime => @lunchTime, :Instr_link => @lunch_instructions_link), class: "btn btn-primary fav"%>
        </div>
      </div>
      <div class="card three">
        <img height="200" width="300" class="card-img-top" src="<%= @dinImg %>">
        <div class="card-body">
          <h5 class="card-title"><%= @dinTitle%></h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Calories: <%=@dinCals%> </li>
            <li class="list-group-item">Preparation Time: <%=@dinTime%> mins</li>
        </ul>
        <div class="card-body">
          <%= link_to "View Recipe", @dinLink, class: "btn btn-primary" %>
          <%= link_to "Favorite Dinner", favorite_recipe_path(:Type => "Dinner", :Title => @dinTitle, :Calories => @dinCals, :PrepTime => @dinTime, :Instr_link => @din_instructions_link), class: "btn btn-primary fav"%>
        </div>
      </div>
    </div>
  </div>
</body>